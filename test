end)

createButton("‚ö° Speed Boost", Color3.fromRGB(255, 200, 0), function()
	local char = player.Character or player.CharacterAdded:Wait()
	local hum = char:FindFirstChildOfClass("Humanoid")
	if hum then hum.WalkSpeed = 40 end
end)

createButton("ü¶ã Fly Mode", Color3.fromRGB(180, 0, 255), function()
	print("ü¶ã Fly mode (placeholder)")
end)

createButton("üåà Rainbow Character", Color3.fromRGB(255, 60, 120), function()
	local char = player.Character
	if char then
		for _, part in ipairs(char:GetChildren()) do
			if part:IsA("BasePart") then
				game:GetService("TweenService"):Create(part, TweenInfo.new(1, Enum.EasingStyle.Linear, Enum.EasingDirection.InOut, -1, true), {Color = Color3.new(math.random(), math.random(), math.random())}):Play()
			end
		end
	end
end)

