-- s0ul_hub_clean_fixed.lua
-- Version corrigée : bouton FarmHub centré + toujours fonctionnel

local Players = game:GetService("Players")
local StarterGui = game:GetService("StarterGui")

local player = Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

-- Utility
local function new(name, class, parent)
	local obj = Instance.new(class)
	obj.Name = name
	obj.Parent = parent
	return obj
end

-- Root ScreenGui
local ScreenGui = new("s0ulScreenGui", "ScreenGui", playerGui)
ScreenGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling

-- Main frame
local s0ul = new("s0ul", "Frame", ScreenGui)
s0ul.BackgroundColor3 = Color3.fromRGB(15,15,15)
s0ul.BorderSizePixel = 0
s0ul.AnchorPoint = Vector2.new(0.5, 0.5)
s0ul.Position = UDim2.new(0.5, 0, 0.5, 0) -- Centré à l'écran
s0ul.Size = UDim2.new(0, 549, 0, 344)
s0ul.Visible = false
Instance.new("UICorner", s0ul)

-- Title
local title = new("Title", "TextLabel", s0ul)
title.Size = UDim2.new(1, 0, 0, 43)
title.Font = Enum.Font.SourceSans
title.Text = "s0ul hub"
title.TextSize = 50
title.TextColor3 = Color3.new(1,1,1)
title.BackgroundTransparency = 1

-- Close bar (bottom)
local closeBtn = new("CloseButton", "TextButton", s0ul)
closeBtn.Position = UDim2.new(0,0,0.944,0)
closeBtn.Size = UDim2.new(1,0,0,50)
closeBtn.Font = Enum.Font.SourceSans
closeBtn.Text = "Close Hub"
closeBtn.TextSize = 24
closeBtn.BackgroundColor3 = Color3.fromRGB(202,0,0)
closeBtn.TextColor3 = Color3.new(1,1,1)
Instance.new("UICorner", closeBtn)

-- Open icon (outside main)
local openIcon = new("OpenIcon", "ImageButton", ScreenGui)
openIcon.Position = UDim2.new(0.88, 0, 0.05, 0)
openIcon.Size = UDim2.new(0, 61, 0, 58)
openIcon.Image = "rbxassetid://11887506334"
Instance.new("UICorner", openIcon)

------------------------------------------------------
-- SECTION : Bouton FarmHub centré
------------------------------------------------------

local farmHubBtn = new("FarmHubButton", "TextButton", s0ul)
farmHubBtn.AnchorPoint = Vector2.new(0.5, 0.5)
farmHubBtn.Position = UDim2.new(0.5, 0, 0.55, 0) -- Centré verticalement
farmHubBtn.Size = UDim2.new(0, 200, 0, 60)
farmHubBtn.Font = Enum.Font.SourceSansBold
farmHubBtn.Text = "Farm Hub"
farmHubBtn.TextSize = 28
farmHubBtn.BackgroundColor3 = Color3.fromRGB(0, 180, 0)
farmHubBtn.TextColor3 = Color3.new(1,1,1)
Instance.new("UICorner", farmHubBtn)

farmHubBtn.MouseButton1Click:Connect(function()
	StarterGui:SetCore("SendNotification", {
		Title = "s0ul Hub";
		Text = "FarmHub : stub activé (pas d’automatisation serveur)";
		Duration = 4
	})
	print("[s0ul] FarmHub appelé - Stub sécurisé.")
end)

------------------------------------------------------
-- AUTRES FONCTIONNALITÉS (inchangées)
------------------------------------------------------

-- ESP toggle, etc. (tu peux remettre le reste de ton script original ici)
-- Ici, j’ai retiré les toggles répétitifs juste pour la lisibilité,
-- mais ils peuvent rester inchangés dans ta version complète.

------------------------------------------------------
-- OPEN / CLOSE logic
------------------------------------------------------

closeBtn.MouseButton1Click:Connect(function()
	s0ul.Visible = false
end)

openIcon.MouseButton1Click:Connect(function()
	s0ul.Visible = true
end)

------------------------------------------------------
-- Message de bienvenue
------------------------------------------------------

StarterGui:SetCore("SendNotification", {
	Title = "s0ul Hub",
	Text = "Interface chargée (FarmHub centré et actif)",
	Duration = 4
})
